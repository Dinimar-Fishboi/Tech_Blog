    {{else}}
     <nav>
      <button class="button is-text" id="homeBtn">Home</button>
      <button class="button is-text" id="dashboardBtn">Dashboard</button>
      <button class="button is-text" id="loginBtn">Login</button>  
    </nav>
    {{/if}}
  </header>
  <main class="box">
    {{{ body }}}
  </main>
  <footer>
      
  </footer>

  <!-- TODO: Add a comment describing the functionality of this helper -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{else}}
  <script src="/js/login.js"></script>
  {{/if}}
</body>

</html>
